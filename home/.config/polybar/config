[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
current    = ${xrdb:color8}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
orange = ${xrdb:color15}
purple = ${xrdb:color4}
pink = ${xrdb:color5}
cyan = ${xrdb:color6}

[bar/primary]
width = 100%
height = 28
bottom = true
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.background}

border-size = 1
border-color = ${colors.current}

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = inputmono:pixelsize=10;3
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=13;4
font-3 = Font Awesome 5 Brands:pixelsize=13;4
font-4 = "Material Icons:style=Regular:size=18;6"

modules-left = i3
modules-center = xwindow
modules-right = volume cpu memory eth battery date

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 6;
ws-icon-4 = 7;
ws-icon-5 = 8;
ws-icon-default = 

label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.red}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.green}
label-focused-foreground = ${colors.current}
label-focused-padding = 4
label-focused-overline = ${colors.green}

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = ${self.label-focused-padding}
label-unfocused-overline = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-foreground = ${colors.foreground}
label-visible-background = ${colors.current}
label-visible-padding = ${self.label-focused-padding}
label-visible-overline = ${colors.current}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.orange}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-overline = ${colors.orange}

[module/cpu]
type = internal/cpu
interval = 2

format-padding = 0
format-prefix = ""
format-foreground = ${colors.green}
format-background = ${colors.background}

label = %{F#F8F8F2}%percentage:2%%

[module/memory]
type = internal/memory
interval = 2

format-padding = 0
format-prefix = ""
format-foreground = ${colors.green}
format-background = ${colors.background}

label = %{F#F8F8F2}%percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-padding = 1
format-connected-prefix = " "
format-connected-foreground = ${colors.green}
format-connected-background = ${colors.background}
format-connected = <label-connected>
label-connected = %essid%

format-disconnected-padding = 1
format-disconnected-prefix = " "
format-disconnected-foreground = ${colors.red}
format-disconnected-background = ${colors.background}
format-disconnected =

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-padding = 1
format-connected-prefix = "lan "
format-connected-foreground = ${colors.orange}
format-connected-background = ${colors.background}

label-connected = %local_ip%

format-disconnected-padding = 1
format-disconnected-prefix = cpu
format-disconnected-foreground = ${colors.red}
format-disconnected-background = ${colors.background}
format-disconnected =

[module/date]
type = internal/date
date = %%{F#BD93F9} %%{F#F8F8F2}%b %e, %%{F#bd93f9}%H:%M%%{F-}

[module/volume]
type = internal/volume

format-volume-padding = 1
format-volume-foreground = ${colors.green}
format-volume-background = ${colors.background}
format-volume = <label-volume> <bar-volume>

label-volume = vol
label-volume-foreground = ${colors.green}

format-muted-padding = 1
format-muted-foreground = ${colors.red}
format-muted-background = ${colors.background}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 90

format-charging-padding = 1
format-charging-font = 2
format-charging-prefix = ""
format-charging-foreground = ${colors.orange}
format-charging-background = ${colors.background}
format-charging = %{F#F8F8F2}<label-charging>

format-discharging-padding = 1
format-discharging-prefix = ""
format-discharging-foreground = ${colors.red}
format-discharging-background = ${colors.background}
format-discharging = %{F#F8F8F2}<label-discharging>

format-full-foreground = ${colors.green}
format-full-padding = 1
format-full-background = ${colors.background}
format-full-prefix = ""
format-full =

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5
