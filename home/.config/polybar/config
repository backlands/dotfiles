[colors]
background = ${xrdb:color8}
foreground = ${xrdb:color15}

; black dark/light
color0 = ${xrdb:color0}
color8 = ${xrdb:color8}

; red dark/light
color1 = ${xrdb:color1}
color9 = ${xrdb:color9}

; green dark/light
color2 = ${xrdb:color2}
color10 = ${xrdb:color10}

; yellow dark/light
color3 = ${xrdb:color3}
color11 = ${xrdb:color11}

; blue dark/light
color4 = ${xrdb:color4}
color12 = ${xrdb:color12}

; magenta dark/light
color5 = ${xrdb:color5}
color13 = ${xrdb:color13}

; cyan dark/light
color6 = ${xrdb:color6}
color14 = ${xrdb:color14}

; white dark/light
color7 = ${xrdb:color7}
color15 = ${xrdb:color15}


[bar/primary]
monitor = ${env:MONITOR:LVDS1}
width = 100%
height = 25
bottom = true
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = 

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = inputmono:pixelsize=10;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=13;4
font-3 = Font Awesome 5 Brands:pixelsize=13;4

modules-left = i3
modules-center = xwindow 
modules-right = cpu memory battery date

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-default = 

label-mode-padding = 2
label-mode-foreground = ${colors.color0}
label-mode-background = ${colors.color2}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.color2}
label-focused-foreground = ${colors.color0}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.color9}
label-urgent-padding = ${self.label-focused-padding}

[module/cpu]
type = internal/cpu
interval = 2

format-padding = 1
format-prefix = " "
format-foreground = ${colors.color0}
format-background = ${colors.color2}

label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2

format-padding = 1
format-prefix = " "
format-foreground = ${colors.color0}
format-background = ${colors.color6}

label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-padding = 1
format-connected-prefix = " "
format-connected-foreground = ${colors.color0}
format-connected-background = ${colors.color3}
format-connected = <label-connected>
label-connected = %essid%

format-disconnected-padding = 1
format-disconnected-prefix = " "
format-disconnected-foreground = ${colors.color0}
format-disconnected-background = ${colors.color8}
format-disconnected =

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-padding = 1
format-connected-prefix = "lan "
format-connected-foreground = ${colors.color0}
format-connected-background = ${colors.color3}

label-connected = %local_ip%

format-disconnected-padding = 1
format-disconnected-prefix = cpu
format-disconnected-foreground = ${colors.color0}
format-disconnected-background = ${colors.color3}
format-disconnected =

[module/date]
type = internal/date
interval = 5

date = " %Y-%m-%d"

time = %H:%M:%S

format-padding = 1
format-prefix = " "
format-foreground = ${colors.color0}
format-background = ${colors.color1}

label = %date% %time%

[module/volume]
type = internal/volume

format-volume-padding = 1
format-volume-foreground = ${colors.color0}
format-volume-background = ${colors.color12}
format-volume = <label-volume> <bar-volume>

label-volume = vol
label-volume-foreground = ${colors.color0}

format-muted-padding = 1
format-muted-foreground = ${colors.color0}
format-muted-background = ${colors.color12}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.color0}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 90

format-charging-padding = 1
format-charging-font = 2
format-charging-prefix = " "
format-charging-foreground = ${colors.color0}
format-charging-background = ${colors.color2}
format-charging = <label-charging>

format-discharging-padding = 1
format-discharging-prefix = " "
format-discharging-foreground = ${colors.color0}
format-discharging-background = ${colors.color11}
format-discharging = <label-discharging>

format-full-foreground = ${colors.color0}
format-full-padding = 1
format-full-background = ${colors.color10}
format-full = 

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5
